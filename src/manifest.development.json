{
  "manifest_version": 3,
  "name": "BiliMini",
  "description": "工具栏添加一个按钮，用于提示并快速查看Bilibili更新",
  "version": "2.0.1",
  "permissions": [
    "webRequest",
    "alarms",
    "storage"
  ],
  "host_permissions": [
    "*://www.bilibili.com/",
    "*://api.vc.bilibili.com/",
    "*://api.live.bilibili.com/"
  ],
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "BiliMini",
    "default_icon": {
      "19": "icons/19.png",
      "38": "icons/38.png"
    }
  }
}