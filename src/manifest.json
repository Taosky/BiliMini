{
  "manifest_version": 2,
  "name": "__MSG_extName__",
  "homepage_url": "https://taosky.github.io/",
  "description": " 工具栏添加一个Bilibili图标，用于提示并快速查看更新",
  "default_locale": "zh",
  "permissions": [
    "contextMenus",
    "tabs",
    "webRequest",
    "*://www.bilibili.com/",
    "*://api.vc.bilibili.com/"
  ],
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "__MSG_extName__",
    "default_icon": {
      "19": "icons/19.png",
      "38": "icons/38.png"
    }
  }
}
